extends layout

block title
  title Czat - lista

block includes
  link(rel='stylesheet' href='/css/styles_chat_list.css')

block content
  main
    each chat in chats
      - var urlId = chat.user_id_1 == loggedUser.id ? chat.user_id_2 : chat.user_id_1
      - var url = '/chat/' + urlId;
      a(class='chat-a' href=url)
        div(class="chat-div")
          h2 #{chat.otherUsername}
          - if (chat.lastMessage)
            - if(chat.lastMessage.sender_id == loggedUser.id)
              p Ty: #{chat.lastMessage.text}
            - else
              p #{chat.otherUsername}: #{chat.lastMessage.text}
  
